# Bot Configuration
BOT_TOKEN=your-bot-token
CLIENT_ID=your-client-id
GUILD_ID=your-guild-id

# Channels
CHANNEL_STATUS=status-channel-id
CHANNEL_FEATURE_REQUESTS=feature-requests-channel-id
CHANNEL_SUPPORT_FORUM=support-forum-channel-id

# Roles
ROLE_STATUS_PING=status-role-id
ROLE_THREAD_MANAGER=thread-manager-role-id
ROLE_DEVELOPER=developer-role-id
ROLE_VOTER=voter-role-id

# Database Configuration
MONGO_URI=your-mongodb-uri
MONGO_URI_MAIN=your-mongodb-uri # Used for vote-syncing with cron job; It uses a different DB than the DB of the bot

# Tags
TAG_UNANSWERED=your-tag-unanswered-id
TAG_UNSOLVED=your-tag-unsolved-id
TAG_SOLVED=your-tag-solved-id
TAG_REVIEW=your-tag-review-id

# Miscellaneous
GITBOOK_TOKEN=your-gitbook-token
SENTRY_DSN=your-sentry-dsn

# Time Stuff
# Used for auto threading
# If you don't use the date- or time-variable in any threadname schema, you should delete ABSTRACT_API_KEY and LOCATION.
ABSTRACT_API_KEY=your-abstract-api-key # More information https://www.abstractapi.com/api/time-date-timezone-api
LOCATION=your-timezone-or-country      # More information https://docs.abstractapi.com/timezones/current-time#param-location

# If you don't want to use the Abstract API, you can just use UTC_OFFSET.
UTC_OFFSET=your-utc-offset   # Default: 0 | Example: 1 for Europe/Berlin, -5 for America/New_York
DATE_FORMAT=your-date-format # Default: DD.MM.YYYY
TIME_FORMAT=your-time-format # Default: HH:mm
